#:kivy 1.0.9
<MyScreenManager>:
    LoginScreen:
        name:'login'
    CallScreen:
        name:'call'


<LoginScreen>:
    canvas.before:
        Color:
            rgba:1,1,1,1
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        Label:
            text:"<UPhone/>"
            size_hint_x:None
            size_hint_y:None
            width:300
            height:50
            pos_hint:{'x': 0.31, 'center_y': 0.8}
            font_size:'60dp'
            color: (0, .7, 1,1)
        Label:
            text:"Username:"
            size_hint_x:None
            size_hint_y:None
            width:100
            height:35
            pos_hint:{'x': 0.3, 'center_y': 0.6}
            font_size:'20dp'
            color: (0, .7, 1,1)
        TextInput:
            multiline:False
            size_hint_x:None
            size_hint_y:None
            width:200
            height:35
            pos_hint:{'x': 0.45, 'center_y': 0.6}
            font_size:'16dp'
        Label:
            text:"Password:"
            size_hint_x:None
            size_hint_y:None
            width:100
            height:35
            pos_hint:{'x': 0.3, 'center_y': 0.53}
            font_size:'20dp'
            color: (0, .7, 1,1)
        TextInput:
            password:True
            multiline:False
            size_hint_x:None
            size_hint_y:None
            width:200
            height:35
            pos_hint:{'x': 0.45, 'center_y': 0.53}
            font_size:'16dp'
        Button:
            text:'Log in!'
            size_hint_x:None
            size_hint_y:None
            width:320
            height:35
            pos_hint:{'x': 0.3, 'center_y': 0.43}
            font_size:'20dp'
            background_normal:''
            background_color:(0, .7, 1,1)
            on_press:
                root.manager.current = 'call'
        Button:
            text:'Sign up!'
            size_hint_x:None
            size_hint_y:None
            width:320
            height:35
            pos_hint:{'x': 0.3, 'center_y': 0.36}
            font_size:'20dp'
            background_normal:''
            background_color:(0, .7, 1,1)

<CallScreen>:
    canvas.before:
        Color:
            rgba:1,1,1,1
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        Label:
            text:"You made it past the login!"
            size_hint_x:None
            size_hint_y:None
            width:300
            height:50
            pos_hint:{'x': 0.31, 'center_y': 0.8}
            font_size:'60dp'
            color: (0, .7, 1,1)
