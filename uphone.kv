#:kivy 1.0.9
<MyScreenManager>:
    LoginScreen:
        name:'login'
    CallScreen:
        name:'call'
    CallScreenData:
        name:'data'


<LoginScreen>:
    canvas.before:
        Color:
            rgba:1,1,1,1
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        Label:
            text:"<UPhone/>"
            size_hint_x:None
            size_hint_y:None
            width:300
            height:50
            pos_hint:{'x': 0.31, 'center_y': 0.8}
            font_size:'60dp'
            color: (0, .7, 1,1)
        Label:
            text:"Username:"
            size_hint_x:None
            size_hint_y:None
            width:100
            height:35
            pos_hint:{'x': 0.3, 'center_y': 0.6}
            font_size:'20dp'
            color: (0, .7, 1,1)
        TextInput:
            multiline:False
            size_hint_x:None
            size_hint_y:None
            width:200
            height:35
            pos_hint:{'x': 0.45, 'center_y': 0.6}
            font_size:'16dp'
            color: (0, .7, 1,1)
        Label:
            text:"Password:"
            size_hint_x:None
            size_hint_y:None
            width:100
            height:35
            pos_hint:{'x': 0.3, 'center_y': 0.53}
            font_size:'20dp'
            color: (0, .7, 1,1)
        TextInput:
            password:True
            multiline:False
            size_hint_x:None
            size_hint_y:None
            width:200
            height:35
            pos_hint:{'x': 0.45, 'center_y': 0.53}
            font_size:'16dp'
            color: (0, .7, 1,1)
        Button:
            text:'Log in!'
            size_hint_x:None
            size_hint_y:None
            width:320
            height:35
            pos_hint:{'x': 0.3, 'center_y': 0.43}
            font_size:'20dp'
            background_normal:''
            background_color:(0, .7, 1,1)
            on_press:
                root.manager.current = 'call'
        Button:
            text:'Sign up!'
            size_hint_x:None
            size_hint_y:None
            width:320
            height:35
            pos_hint:{'x': 0.3, 'center_y': 0.36}
            font_size:'20dp'
            background_normal:''
            background_color:(0, .7, 1,1)

<CallScreen>:
    canvas.before:
        Color:
            rgba:1,1,1,1
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba:0.3,0.3,0.3,1
        Rectangle:
            pos: (155, 0)
            size:(2, self.height)
    FloatLayout:
        Label:
            text:"Contacts"
            size_hint_x:None
            size_hint_y:None
            width:150
            height:50
            pos_hint:{'x': 0, 'center_y': 0.95}
            font_size:'26dp'
            color: (0.2, 0.2, 0.2,1)
        Button:
            text:'Ale'
            size_hint_x:None
            size_hint_y:None
            width:140
            height:35
            pos_hint:{'x': 0.01, 'center_y': 0.85}
            font_size:'20dp'
            background_normal:''
            background_color:(0, .7, 1,1)
            on_press:
                root.manager.current = 'data'
<CallScreenData>:
    canvas.before:
        Color:
            rgba:1,1,1,1
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba:0.3,0.3,0.3,1
        Rectangle:
            pos: (155, 0)
            size:(2, self.height)
    FloatLayout:
        Label:
            text:"Contacts"
            size_hint_x:None
            size_hint_y:None
            width:150
            height:50
            pos_hint:{'x': 0, 'center_y': 0.95}
            font_size:'26dp'
            color: (0.2, 0.2, 0.2,1)
        Button:
            text:'Ale'
            size_hint_x:None
            size_hint_y:None
            width:140
            height:35
            pos_hint:{'x': 0.01, 'center_y': 0.85}
            font_size:'20dp'
            background_normal:''
            background_color:(0, .7, 1,1)
        Button:
            text:'Send'
            size_hint_x:None
            size_hint_y:None
            width:120
            height:35
            pos_hint:{'x': 0.8, 'center_y': 0.2}
            font_size:'20dp'
            background_normal:''
            background_color:(0, .7, .2,1)
            on_press:
                txt = root.ids.input.text
                if txt != "":root.ids.msg.text = root.ids.msg.text + "\n" + txt

                root.ids.input.text = ''
        TextInput:
            id:input
            halign:"left"
            password:False
            multiline:True
            size_hint_x:None
            size_hint_y:None
            width:430
            height:35
            pos_hint:{'x': 0.25, 'center_y': 0.2}
            font_size:'16dp'
            color: (0, .7, 1,1)
        Label:
            id:msg
            text:""
            multiline:True
            size_hint_x:None
            size_hint_y:None
            text_size: self.width, None
            height: self.texture_size[1]
            width:430
            height:35
            pos_hint:{'x': 0.25, 'center_y': 0.4}
            font_size:'16dp'
            color: (0.3, .3, 0.3,1)
